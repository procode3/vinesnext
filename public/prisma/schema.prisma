  BOOK_REPORT
  MOVIE_REVIEW
  MOVIE_CRITIQUE
  ARTICLE
  ARTICLE_CRITIQUE
  REACTION_PAPER
  LETTER
  REFLECTION_PAPER
  LAB_REPORT
  LAB_WORK
  SPEECH
  PRESENTATION
  POWERPOINT_PRESENTATION
  MATH_PROBLEM
  STATISTICS_PROJECT
  RESEARCH_SUMMARY
  THESIS
  DISSERTATION
  THESIS_PROPOSAL
  DISSERTATION_PROPOSAL
  RESEARCH_PROPOSAL
  ADMISSION_ESSAY
  SCHOLARSHIP_ESSAY
  PERSONAL_STATEMENT
  EDITING
  PROOFREADING
  REWRITING
  RESUME
